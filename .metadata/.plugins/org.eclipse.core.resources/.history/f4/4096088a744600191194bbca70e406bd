package com.plus.app.exampleSQL.service;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.plus.app.exampleSQL.model.Customer;
import com.plus.app.exampleSQL.repository.CustomerRepository;

@Service
public class CustomerService {

	@Autowired
	private CustomerRepository customerRepository;
	
	public List<Customer> findAllCustomer() {
//		return (List<Customer>) customerRepository.findAll();
		((List<Customer>) customerRepository.findAll()).stream().map(item -> new Customer(item)).collect(Collectors.toList());
	}
	
}
